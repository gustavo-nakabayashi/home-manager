# change window focus withing space
alt - j : /opt/homebrew/bin/yabai -m window --focus south
alt - k : /opt/homebrew/bin/yabai -m window --focus north
alt - h : /opt/homebrew/bin/yabai -m window --focus west || /opt/homebrew/bin/yabai -m display --focus west
alt - l : /opt/homebrew/bin/yabai -m window --focus east || /opt/homebrew/bin/yabai -m display --focus east

# toggle float
shift + alt - t : /opt/homebrew/bin/yabai -m window --toggle float --grid 4:4:1:1:2:2; sketchybar --trigger window_focus

# maximize a window
shift + alt - return : /opt/homebrew/bin/yabai -m window --toggle zoom-fullscreen; sketchybar --trigger window_focus

# balance out windows
shift + alt - e : /opt/homebrew/bin/yabai -m space --balance

# -- Moving Windows Around --

# swap windows
shift + alt - j : /opt/homebrew/bin/yabai -m window --swap south
shift + alt - k : /opt/homebrew/bin/yabai -m window --swap north
shift + alt - h : /opt/homebrew/bin/yabai -m window --swap west 2>&1 | grep -q . && /opt/homebrew/bin/yabai -m window --display west --focus;
shift + alt - l : /opt/homebrew/bin/yabai -m window --swap east 2>&1 | grep -q . && eval "/opt/homebrew/bin/yabai -m window --display east --focus; /opt/homebrew/bin/yabai -m space --mirror y-axis"

hyper - j : /opt/homebrew/bin/yabai -m window --swap south
hyper - k : /opt/homebrew/bin/yabai -m window --swap north
hyper - h : /opt/homebrew/bin/yabai -m window --swap west 2>&1 | grep -q . && /opt/homebrew/bin/yabai -m window --display west --focus;
hyper - l : /opt/homebrew/bin/yabai -m window --swap east 2>&1 | grep -q . && eval "/opt/homebrew/bin/yabai -m window --display east --focus; /opt/homebrew/bin/yabai -m space --mirror y-axis"

# move window to space #
shift + alt - 1 : /opt/homebrew/bin/yabai -m window --space 1 --focus
shift + alt - 2 : /opt/homebrew/bin/yabai -m window --space 2 --focus
shift + alt - 3 : /opt/homebrew/bin/yabai -m window --space 3 --focus
shift + alt - 4 : /opt/homebrew/bin/yabai -m window --space 4 --focus
shift + alt - 5 : /opt/homebrew/bin/yabai -m window --space 5 --focus
shift + alt - 6 : /opt/homebrew/bin/yabai -m window --space 6 --focus
shift + alt - 7 : /opt/homebrew/bin/yabai -m window --space 7 --focus

hyper - 1 : /opt/homebrew/bin/yabai -m window --space 1 --focus
hyper - 2 : /opt/homebrew/bin/yabai -m window --space 2 --focus
hyper - 3 : /opt/homebrew/bin/yabai -m window --space 3 --focus
hyper - 4 : /opt/homebrew/bin/yabai -m window --space 4 --focus
hyper - 5 : /opt/homebrew/bin/yabai -m window --space 5 --focus
hyper - 6 : /opt/homebrew/bin/yabai -m window --space 6 --focus
hyper - 7 : /opt/homebrew/bin/yabai -m window --space 7 --focus

